@using Webshop2.Models
@model Categorie

@{
    ViewBag.Title = "Index";
}

<h1>@ViewBag.H1</h1>

<form name="CategorieWijzigen" method="post" action="/Store/CategorieGewijzigd">

    <table>
        <tr>
            <td>
                <label>Categorie:</label>
            </td>
            <td>

                <select name="categorieID">
                    @foreach (Categorie cat in @ViewBag.categorieen)
                    {
                        <option value="@cat.categorieID">@cat.categorieNaam </option>

                    }
                </select>


            </td>

        </tr>
        <tr>
            <td>
                <label>Categorie Naam :</label>
            </td>
            <td>
                @Html.TextBoxFor(model => model.categorieNaam)
            </td>
            <td id="validationerror">
                @Html.ValidationMessageFor(model => model.categorieNaam)
            </td>
        </tr>

        <tr>
            <td></td>
            <td>
                <input type="submit" value="Wijzigen">
            </td>
        </tr>
    </table>

</form>
