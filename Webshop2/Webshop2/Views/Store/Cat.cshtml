@using Webshop2.Models
@model List<Product>
@{
    ViewBag.Title = "Cat";
}

<h1>@ViewBag.H1</h1>

@{foreach (Product prod in Model)
{
    <p class="naastElkaar">
        <tr>

            <a href="Store/ProductDetail?productID=@prod.productID"><img src="~/ProductImages/@prod.productAfbeelding" alt="AFBEELDING" height="00" width="500" /></a>
            <br />
            <br />
            <b>Naam: </b>@prod.productNaam
            <br />
            <b>Merk: </b>@prod.productMerk
            <br />
            
        </tr>
    </p>
}}