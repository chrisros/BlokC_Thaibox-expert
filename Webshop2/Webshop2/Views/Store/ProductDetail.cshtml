@using Webshop2.Models
@model List<Product>

@{
    ViewBag.Title = "Product Detail";
}

<h1>@ViewBag.H1</h1>

@{foreach (Product prod in Model)
  {
        <p>
            <img src="~/images/PlaceHolderImages/Small Pics/carracer.png" alt="Artikel met ID 1" height="500" width="500"><br/>
            Naam: @prod.productNaam <br />
            Prijs: @prod.productPrijs <br />
            Merk: @prod.productMerk <br/>
            Detail: @prod.productDetail <br />
        </p>
}
}
    

    


   