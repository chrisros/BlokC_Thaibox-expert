@using Webshop2.Models
@model AdminModel

@{
    ViewBag.Title = "Sitebeheer.";
}

<h1>@ViewBag.H1</h1>

<div>
    <p>Welkom, @Model.Functie @Model.Naam.</p>

    <p>Als @Model.Functie heeft u de volgende mogelijkheden:
       @if (Model.Functie.Equals("beheerder")) {
        <ol>
           <li><a href="/Store/ProductToevoegen">Een product toevoegen aan het assortiment.</a></li>
           <li><a href="/Store/ProductWijzigen">Een product uit het asssortiment wijzigen.</a></li>
           <li><a href="/Store/ProductVerwijderen">Een product uit het assortiment verwijderen.</li>
            <li><a href="/Store/CategorieToevoegen">Een categorie toevoegen.</a></li>
            <li><a href="/Store/CategorieWijzigen">Een categorie wijzigen.</a></li>
            <li><a href="/Store/CategorieVerwijderen">Een categorie verwijderen.</a></li>
            
           <li><a href="/Store/ReactieBeheer">Geplaatste reacties verbergen/verwijderen</a></li>
       </ol>
       }
       else
       {
        <ol>
            <li><a href="/Account/Overzichtpagina">De omzet van deze maand bekijken.</a></li>
            <li><a href="/Account/GoedVerkocht">De top 5 meest verkochte producten bekijken.</a></li>
        </ol>
       }
              
    </p>

</div>
